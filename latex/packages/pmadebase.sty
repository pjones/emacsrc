\usepackage{fancyhdr}

\let\OrigTableOfContents\tableofcontents
\renewcommand\tableofcontents{%
  \thispagestyle{empty}
  \OrigTableOfContents
  \newpage
  \pagestyle{fancy}
  \fancyheadoffset{\marginparsep+\marginparwidth}
  \fancyhf{}
  \fancyhead[L]{\leftmark}
  \fancyhead[R]{Page \thepage{} of \pageref{LastPage}}}

