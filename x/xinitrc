#!/bin/sh

# Force this file to be processed by zsh.
if [ -z "$ZSH_LOADED_FROM" ]; then
  export ZSH_LOADED_FROM=$0
  exec zsh -x $0
fi

# Set the default cursor and background.
xsetroot -cursor_name left_ptr
xsetroot -solid "#4b0082"

# Run scripts that might change the environment for the remaining apps
# that need to be started.
if [ -d ~/.xinitrc.d ]; then
  for f in ~/.xinitrc.d/*; do
    source $f
  done
fi

# Start taffy bar.
~/bin/taffybar.sh &

# Start the window manager.
exec ~/bin/xmonad
