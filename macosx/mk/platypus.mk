# -*- mode: makefile-gmake -*-

############################################################################
RUBY ?= /opt/local/bin/ruby

############################################################################
.SUFFIXES: .rb .app

############################################################################
%.app: %.rb
	@ echo $< '=>' $(subst $(HOME),'~',$(DEST)/$@)
	@ platypus -o None -c $< -p $(RUBY) -B $@
	@ rm -rf $(DEST)/$@
	@ cp -rp $@ $(DEST)/
	@ rm -rf $@
