#!/usr/local/bin/zsh

# keep unique
typeset -U ssh_hosts

# suck in hostnames from known_hosts
if [ -r ~/.ssh/known_hosts ]; then
    ssh_hosts=(`awk '{print $1}' < ~/.ssh/known_hosts | sed 's/,.*$//'` $hosts)
    zstyle ':completion:*' hosts $ssh_hosts
fi
#zstyle ':completion:*:(ssh|scp|ping|telnet|traceroute):*' hosts $ssh_hosts
