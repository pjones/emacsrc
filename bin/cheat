#!/bin/sh

################################################################################
# Dumps a "Cheat Sheet" section from my knowledge base to stdout.

################################################################################
KB=~/documents/kb

################################################################################
if [ $# -ne 1 ]; then
  echo "Usage: cheat <name>"
  exit 1
fi

################################################################################
for file in `find $KB -type f -name $1.md`; do
  awk '/^# Cheat Sheet/ {m=NR; next}; /^#/ {exit}; m && NR > (m+1)' $file
done
