################################################################################
DEST = ~/.emacs.d/pjones/snippets
FILES = $(shell find . -type f | grep -v GNUmakefile | sed 's|\./||g')

##############################################################################
.PHONEY: all

################################################################################
define INSTALL
all: $(DEST)/$(1)
$(DEST)/$(1): $(1)
	install -D -m0640 $$< $$@
endef

################################################################################
$(foreach f,$(FILES),$(eval $(call INSTALL,$(f))))
