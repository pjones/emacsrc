# How many points before a mail is considered spam. (Default is 5.)
required_score 10

# Enable auto white listing
# http://wiki.apache.org/spamassassin/AutoWhitelist
use_auto_whitelist 1

# Add your own customised scores for some tests below.  The default scores are
# read from the installed spamassassin rules files, but you can override them
# here.  To see the list of tests and their default scores, go to
# http://spamassassin.apache.org/tests.html .
score MIME_HTML_ONLY         5
score MICROSOFT_EXECUTABLE   10
score URIBL_BLACK            10
score URIBL_RHS_URIBL_BLACK  10
score URIBL_JP_SURBL         10
score RCVD_IN_BL_SPAMCOP_NET 10
score MISSING_MID            10
score MISSING_DATE           10

# http://www.dnswl.org/ might be comprised since a ton of spam is
# getting through because the defaults for the rules below reduce the
# score by quite a lot.
score RCVD_IN_DNSWL_LOW 0
score RCVD_IN_DNSWL_MED 0
score RCVD_IN_DNSWL_HI  0

# Use the local bayes database to help score spam
# http://wiki.apache.org/spamassassin/BasicConfiguration
# http://spamassassin.apache.org/tests_3_2_x.html
use_bayes 1
bayes_auto_learn 1
score BAYES_00 -5.0
score BAYES_05 -2.0
score BAYES_20  0.0
score BAYES_40  2.0
score BAYES_50  2.5
score BAYES_60  3.0
score BAYES_80  3.5
score BAYES_95  4.0
score BAYES_99  5.0

# Personal rules.
# https://wiki.apache.org/spamassassin/WritingRules

# Annoying subjects.
header PMADE_SOMEONE_SEARCHED_FOR_YOU Subject =~ /(an old friend|an ex recently) searched for you/i
score  PMADE_SOMEONE_SEARCHED_FOR_YOU 10

# Red flag when to/cc address doesn't include my name.
header PMADE_MISSING_NAME_TO To !~ /pete/i
header PMADE_MISSING_NAME_CC Cc !~ /pete/i
score  PMADE_MISSING_NAME_TO 5.0
score  PMADE_MISSING_NAME_CC 5.0

# If the Cc header is missing then negate the above rule.
header PMADE_CC_HEADER_NOT_PRESENT Cc =~ /^$/m
score  PMADE_CC_HEADER_NOT_PRESENT -5.0

# If you do use my name it's probably because I gave it to you.
header PMADE_HAS_NAME_TO To =~ /Peter/
header PMADE_HAS_NAME_CC Cc =~ /Peter/
score  PMADE_HAS_NAME_TO -5.0
score  PMADE_HAS_NAME_CC -5.0

# Blacklists
blacklist_from *@pmade.org
blacklist_to   *@pmade.org
blacklist_from *@pmtcert.com
blacklist_from *blueredgolds.info
blacklist_from *musiciansfriend.com
blacklist_from *dinospeaker.com

# Manual whitelists
whitelist_from *bvsd.org
whitelist_from *premiermembers.org
whitelist_from *gemresourcing.com
whitelist_from *gmane.org
whitelist_to   coders01@devalot.com
